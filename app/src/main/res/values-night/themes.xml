<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Redjohn001" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:listPreferredItemHeightSmall">64dp</item>
    </style>

    <style name="welcome_activity_style" parent="Theme.Redjohn001">
        <item name="android:windowBackground">@drawable/welcome_background</item>
    </style>

    <style name="main_registration_activity_style" parent="Theme.Redjohn001">
        <item name="android:background">@drawable/boy_common_background</item>
    </style>

    <style name="bold_text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="medium_text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="txt_inp_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="hintTextAppearance">@style/medium_text</item>
        <item name="android:textAppearance">@style/medium_text</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">0.5dp</item>
    </style>

    <style name="txt_inp_edt_style" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="code_edt_txt_style" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="code_txt_inp_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="Theme.Redjohn001.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Redjohn001.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="spinner_style" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/brown_text_color</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="time_spinner_style" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ShiftTabStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>
</resources>