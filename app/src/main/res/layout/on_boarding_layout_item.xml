<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/on_boarding_img"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/on_boarding_img"
        android:scaleType="centerInside"
        android:src="@drawable/on_boarding_img_three" />

    <TextView
        android:id="@+id/on_boarding_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Set Schedules"
        android:textAllCaps="false"
        android:textAppearance="@style/bold_text"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/on_boarding_description_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:gravity="start"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit Lorem lorem ipsum dolor sit amet, consectetur adipiscing elit Lorem"
        android:textAppearance="@style/medium_text"
        android:textColor="@color/color_secondary_text" />
</LinearLayout>